{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "outDir": "lib",
        "sourceMap": false,
        "pretty": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "lib": [ "ESNext" ],
        "moduleResolution": "Node"
    }
}